<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lab3_Lavrov_DS6.MainPage">

    <StackLayout BackgroundColor="LightGray">
        <Label Text="Calculator" TextColor="Blue" FontSize="Large" HorizontalOptions="Center"/>

        <Label Text="First operand" TextColor="Blue" FontSize="Medium"/>
        <Entry x:Name="parameter1Entry" Placeholder="Enter first operand" Keyboard="Numeric"
               TextChanged="Parameter1Entry_TextChanged" WidthRequest="200" HeightRequest="50"/>

        <Label Text="Second operand" TextColor="Blue" FontSize="Medium"/>
        <Entry x:Name="parameter2Entry" Placeholder="Enter second operand" Keyboard="Numeric"
               TextChanged="Parameter2Entry_TextChanged" WidthRequest="200" HeightRequest="50"/>

        <Label Text="Operation" TextColor="Blue" FontSize="Medium"/>

        <StackLayout Orientation="Horizontal">
            <Button Text="+" Clicked="OnSummClicked"/>
            <Button Text="-" Clicked="OnSubractionClicked"/>
            <Button Text="*" Clicked="OnMultiplicationClicked"/>
            <Button Text="/" Clicked="OnDivisionClicked"/>
        </StackLayout>

        <Label Text="Result" TextColor="Blue" FontSize="Medium"/>
        <Label x:Name="textLabel1" FontSize="Large" TextColor="Red"/>
    </StackLayout>

</ContentPage>
