             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lab2_Lavrov_DS6.MainPage">

    <StackLayout>
        <StackLayout Orientation="Horizontal">
            <BoxView BackgroundColor="Red" Margin="5" />
            <BoxView BackgroundColor="Blue" Margin="5" />
            <BoxView BackgroundColor="Green" Margin="5" />
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <BoxView BackgroundColor="Yellow" Margin="5" />
            <BoxView BackgroundColor="Orange" Margin="5" />
            <BoxView BackgroundColor="Purple" Margin="5" />
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <BoxView BackgroundColor="Pink" Margin="5" />
            <BoxView BackgroundColor="Teal" Margin="5" />
            <BoxView BackgroundColor="Gray" Margin="5" />
        </StackLayout>
    </StackLayout>

</ContentPage>
